<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.sample.social">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityFriendDetails"/>
        <activity android:name=".ActivityFriendDetails2"/>
        <activity android:name=".activity_product.ActivityProductDetails"/>
        <activity android:name=".activity_articles.ActivityArticles"/>
        <activity android:name=".ActivityChatDetails"/>
        <activity
            android:name=".ActivitySelectFriend"
            android:label="@string/activity_select_friend"/>
        <activity
            android:name=".ActivityLogin"
            android:label="@string/title_activity_activity_login"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ActivityRegistration"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activity_mutiple_image.ActivityMutipleImage"/>
        <activity android:name=".activity_viedo_full.ActivityFullVideo"/>
        <activity android:name=".activity_youtube.ActivityYoutube"/>
    </application>

</manifest>
